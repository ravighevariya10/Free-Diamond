<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TipsTricks"
    android:orientation="vertical"
    android:layout_weight="1"
    android:background="@drawable/app_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.08"
        android:orientation="horizontal"
        android:weightSum="1"
        android:gravity="center">

        <ImageView
            android:layout_weight="0.2"
            android:id="@+id/arraw_tips"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:src="@drawable/header"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>

    </LinearLayout>

    <com.amar.library.ui.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.92">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip1"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip2"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip3"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip4"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip5"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip6"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/tip7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/tip7"
                android:layout_marginHorizontal="20dp"
                android:adjustViewBounds="true"
                android:layout_marginVertical="20dp"/>

        </LinearLayout>

    </com.amar.library.ui.StickyScrollView>

</LinearLayout>